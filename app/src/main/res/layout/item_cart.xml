<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/backgroundxml"
        android:layout_margin="8dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_image_cart"
                android:src="@drawable/laptop"
                android:padding="@dimen/very_small_padding"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_name_cart"
                android:text="HP-Laptop 15p017tu"
                android:textSize="@dimen/very_small_text"
                android:layout_marginTop="@dimen/very_small_margin"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/very_small_padding"
                android:paddingBottom="@dimen/very_small_padding"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/actual_item_price_cart"
                    android:text="Rs.45000"
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/very_small_padding"
                    android:paddingBottom="@dimen/very_small_padding"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.4"
                    android:drawableRight="@mipmap/star"
                    android:gravity="center"
                    android:id="@+id/ratings_cart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/very_small_text"
                    android:drawablePadding="5dp"
                    android:paddingLeft="@dimen/very_small_padding"
                    />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_gravity="right|bottom"
            android:id="@+id/delete_cart"
            />

    </LinearLayout>

</RelativeLayout>